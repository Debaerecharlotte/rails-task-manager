<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p>Done? <%= @task.completed ? 'Yes' : 'No' %></p>

<p><%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>

<p><%= link_to 'Back to my tasks', tasks_path %></p>
<p><%= link_to 'Edit task', task_edit_path(@task) %></p>
